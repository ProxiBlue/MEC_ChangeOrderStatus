<?xml version="1.0"?>
<config>
    <tabs>
        <changeorderstatus translate="label" module="mec_changeorderstatus">
            <label>MEC Extensions</label>
            <sort_order>500</sort_order>
        </changeorderstatus>
    </tabs>
    <sections>
        <changeorderstatus translate="label" module="mec_changeorderstatus">
            <class>separator-top</class>
            <label>MEC Change Order Status</label>
            <tab>changeorderstatus</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label" module="mec_changeorderstatus">
                    <label>Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>                        
                    <fields>                                                
                        <module_enabled translate="label">
                            <label>Module Enabled</label>                            
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </module_enabled>                        
                        <send_mail translate="label">
                            <label>Send Transaction Email</label>
                            <comment>Send transaction email when order status is changed. The transaction emails are defined in System > Order Statuses.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </send_mail>                        
                        <protect_order_state translate="label">
                            <label>Protect Order State</label>
                            <comment>By default Magento protects order state to be manually set to Complete and Closed. With this option you can override such behaviour.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </protect_order_state>                                                                        
                    </fields>
                </general >                                                                
            </groups>
        </changeorderstatus>
    </sections>
</config>